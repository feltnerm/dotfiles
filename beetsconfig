## Beet settings
[beets]
color:          yes
threaded:       yes
plugins:        lastgenre scrub inline fetchart ftintitle importfeeds mpdupdate

# Directory for music and path to Beets library
directory:      /stash/library/final/music
library:        ~/.musiclibrary.blb

# importing
import_copy:    yes
import_move:    no
import_write:   yes 
import_log:     beetslog.txt
import_resume:  yes
import_art:     yes
import_quiet_fallback: skip

art_filename:   cover

ignore:         .AppleDouble ._* *~ .DS_Store

import_log:     beetslog.text


## Path Settings
# $artist/
#         $year - $album [$format|$bitrate]/
#                                           $track - $title
##
[paths]
default:                $albumartist/$year - $album [$format]/$track - $title
singleton:              $artist/$year - $album [$format]/$title
comp:                   __COMPILATIONS/$year - $album [$format]/$track - $title - $artist
albumtype_soundtrack:   %if{$composer,$composer,__SOUNDTRACKS}/$year - $album [$format]/$track - $title

