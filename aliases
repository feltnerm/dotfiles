##
#
# aliases
#
##

# do stuff
alias please='sudo'
alias !='sudo'

# wtf have I done?
alias aliases='less ~/.aliases'

# calculate
alias bc='bc -ql'

# count lines of code
alias cloc='cloc --exclude-dir=.git,.hg'

# move around
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~="cd ~"
alias -- -="cd -"

# move other things around
alias cpv='rsync -pogr --progress'
alias cp='cp -i'

# lol, ducks.
alias ducks='du -cksh * | sort -rn | head -11'

# how much memz?
alias free='free -m'

# list stuff
#if ls --color > /dev/null 2>&1; then
#    colorflag='--color'
#else
local colorflag='-G'
#fi
alias l="ls -l ${colorflag}"
alias ll="ls -lhf ${colorflag}"
alias la="ls -lahf ${colorflag}"
alias lh="ls -hf ${colorflag}"
alias lsd="ls -l ${colorflag} | grep '^d'"
alias ls="ls ${colorflag}"

if _which k; then
    alias lsk="k"
fi

alias pygmentize="pygmentize -O style=monokai -f console256 -g"
# `cat` with pretty colors
alias c="pygmentize -O style=monokai -f console256 -g"

# Netwerk stuff
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en1"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"

# OS stuff
alias mv='mv -i'
alias ports='lsof -i -P -sTCP:LISTEN'
alias pm='ps ax | grep -v grep | grep '
function psgrep() { ps axuf | grep -v grep | grep '$@' -i --color=auto; }

# SSH
alias ssh-keygen2='ssh-keygen -t rsa -C "$(whoami)@$(hostname)-$(date -u)"'

# remove stuff
alias rm='rm -i'
# pyc files
alias rmpyc='find . -name \*.pyc -exec rm -v {} \;'
# Recursively delete `.DS_Store` files
alias rmdstore='find . -name \*.DS_Store -exec rm -v {} \;'

alias clean="rmpyc; rmdstore"

# Shortcuts
alias g="git"
alias v="vim"

# df < pydf < cdf
if _which pydf; then
    alias df='pydf'
else
    if _which cdf; then
        alias df='cdf'
    fi
fi

# Surfraw is the bees knees
alias srddg="sr duckduckgo"
alias srgh="sr github"

#alias spotify="osascript $HOME/bin/SpotifyControl/SpotifyControl.scpt"
alias oracow="fortune | cowsay | lolcat"
